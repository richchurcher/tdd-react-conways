{
  "name": "tdd-react-conways",
  "version": "0.1.0",
  "description": "TDD Conway's Game of Life in React, using Ava and Enzyme.",
  "repository": "https://github.com/richchurcher/tdd-react-conways",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "watch": "webpack --watch",
    "start": "webpack-dev-server --hot --inline",
    "test": "ava --watch"
  },
  "ava": {
    "failfast": true,
    "tap": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "env": {
    "start": {
      "presets": [
        "react-hmre"
      ]
    }
  },
  "author": "Rich Churcher",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-core": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "enzyme": "^2.3.0",
    "eslint": "^2.12.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-standard": "^1.3.2",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
